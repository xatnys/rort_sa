<li id="<%= feed_item.id %>">
	<div class="feed left">
		<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	</div>
	<div class="feed right">
		<span class="user">
			<%= link_to feed_item.user.name, feed_item.user %>
		</span>
		<%= render partial: 'shared/micropost_common', object: feed_item, :as => 'micropost' %>
	</div>
</li>