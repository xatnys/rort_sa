<%# current_user?(@user) makes sure the @user profile is not the current user -- we don't want to be able to follow/unfollow ourselves %>
<% unless current_user?(@user) %>
	<div id="follow_form">
		<% if current_user.following?(@user) %>
			<%= render 'unfollow' %>
		<% else %>	
			<%= render 'follow' %>
		<% end %>
	</div>
<% end %>