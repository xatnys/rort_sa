<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		<section>
			<%= render 'shared/follow_stats' %>
			<% if @users.any? %>
				<div class="user_avatars">
					<% @users.each do |u| %>
						<%= link_to gravatar_for(u, size: 30), u %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<ul class="users">
				<%= render @users %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>